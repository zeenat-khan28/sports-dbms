@import "tailwindcss";

/* Custom CSS Variables for Amber/Gold Theme */
:root {
  --amber-50: #fffbeb;
  --amber-100: #fef3c7;
  --amber-200: #fde68a;
  --amber-300: #fcd34d;
  --amber-400: #fbbf24;
  --amber-500: #f59e0b;
  --amber-600: #d97706;
  --amber-700: #b45309;
  --amber-800: #92400e;
  --amber-900: #78350f;
}

/* Force dark mode */
html {
  color-scheme: dark;
}

body {
  @apply bg-gray-950 text-gray-100 antialiased;
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-gray-900;
}

::-webkit-scrollbar-thumb {
  @apply bg-gray-700 rounded-full;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-gray-600;
}

/* Input styling */
input, textarea, select {
  @apply bg-gray-800 border border-gray-700 text-gray-100 rounded-lg;
  @apply focus:ring-2 focus:ring-amber-500 focus:border-amber-500 focus:outline-none;
  @apply placeholder-gray-500;
}

/* Button base */
.btn {
  @apply px-4 py-2 rounded-lg font-medium transition-all duration-200;
  @apply focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900;
}

.btn-primary {
  @apply bg-amber-500 text-gray-900 hover:bg-amber-400;
  @apply focus:ring-amber-500;
}

.btn-secondary {
  @apply bg-gray-700 text-gray-100 hover:bg-gray-600;
  @apply focus:ring-gray-500;
}

.btn-danger {
  @apply bg-red-600 text-white hover:bg-red-500;
  @apply focus:ring-red-500;
}

.btn-success {
  @apply bg-emerald-600 text-white hover:bg-emerald-500;
  @apply focus:ring-emerald-500;
}

/* Card styling */
.card {
  @apply bg-gray-900 border border-gray-800 rounded-xl shadow-lg;
}

/* Badge styling */
.badge {
  @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
}

.badge-pending {
  @apply bg-amber-500/20 text-amber-400 border border-amber-500/30;
}

.badge-approved {
  @apply bg-emerald-500/20 text-emerald-400 border border-emerald-500/30;
}

.badge-rejected {
  @apply bg-red-500/20 text-red-400 border border-red-500/30;
}

/* Table styling */
table {
  @apply w-full text-sm;
}

thead {
  @apply bg-gray-800/50;
}

th {
  @apply px-4 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider;
}

td {
  @apply px-4 py-3 border-b border-gray-800;
}

tbody tr {
  @apply hover:bg-gray-800/30 transition-colors;
}

/* Form sections */
.form-section {
  @apply card p-6 space-y-4;
}

.form-section-title {
  @apply text-lg font-semibold text-amber-400 border-b border-gray-800 pb-2 mb-4;
}

.form-label {
  @apply block text-sm font-medium text-gray-300 mb-1.5;
}

.form-input {
  @apply w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-lg;
  @apply focus:ring-2 focus:ring-amber-500 focus:border-amber-500;
}

/* Animation */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fadeIn {
  animation: fadeIn 0.3s ease-out;
}

/* Loader */
.loader {
  @apply w-6 h-6 border-2 border-amber-500 border-t-transparent rounded-full animate-spin;
}
